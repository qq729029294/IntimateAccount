<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <com.ryg.expandable.ui.StickyLayout
        android:id="@+id/sticky_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/app_main_color"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/sticky_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#78A524"
            android:gravity="center"
            android:orientation="vertical" >

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/view_account_book_main" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sticky_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/ltlt_gray" >

            <com.ryg.expandable.ui.PinnedHeaderExpandableListView
                android:id="@+id/list_records"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="@null"
                android:childIndicatorLeft="0dp"
                android:dividerHeight="0dp"
                android:groupIndicator="@null"
                android:paddingBottom="48dp"
                android:clipToPadding="false"
                android:scrollbarAlwaysDrawHorizontalTrack="false" >
            </com.ryg.expandable.ui.PinnedHeaderExpandableListView>
        </LinearLayout>
    </com.ryg.expandable.ui.StickyLayout>

    <RelativeLayout
        android:id="@+id/btn_record"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_btn_white_lt_transparent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_line0"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@color/app_main_color" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="记一笔"
            android:textColor="@color/app_main_color"
            android:textSize="18dp" />
    </RelativeLayout>

</RelativeLayout>