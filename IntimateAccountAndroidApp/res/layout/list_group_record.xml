<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/light_gray" >

        <LinearLayout
            android:id="@+id/layout_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/text_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_date_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15.05.01-05.31"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_toLeftOf="@+id/layout_surplus"
            android:layout_toRightOf="@id/layout_date"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/text_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收 ¥500.00"
                android:textColor="@color/income"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_expend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_income"
                android:text="支 ¥600.00"
                android:textColor="@color/expend"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/layout_surplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="结余"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_surplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-¥100.00"
                android:textSize="18sp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>