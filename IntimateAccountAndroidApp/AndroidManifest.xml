<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nan.ia.app"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.nan.ia.app.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        
        <activity
            android:name=".ui.LoadingActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTask"
            android:label="" >
        </activity>
        
        <activity
            android:name=".ui.StartActivity" >
        </activity>
        
        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/title_login" >
        </activity>
        
        <activity
            android:name=".ui.RegisterActivity"
            android:label="@string/title_register"
            android:launchMode="singleTask"
            android:taskAffinity="com.nan.ia.app.register" >
        </activity>
        
        <activity
            android:name=".ui.VerifyVfCodeActivity"
            android:label="@string/title_verify_vf_code"
            android:launchMode="singleTask"
            android:taskAffinity="com.nan.ia.app.register" >
        </activity>
        
        <activity
            android:name=".ui.CompleteRegisterActivity"
            android:label="@string/title_complete_register"
            android:launchMode="singleTask"
            android:taskAffinity="com.nan.ia.app.register" >
        </activity>
        
        <activity
            android:name=".ui.AccountBookActivity"
            android:label="@string/title_account_book" >
        </activity>
        
        <activity
            android:name=".ui.AccountBookEditActivity"
            android:label="@string/title_account_book_edit" >
        </activity>
        <activity
            android:name=".ui.RecordActivity"
            android:label="@string/title_record" >
        </activity>
                <activity
            android:name=".ui.InviteMemberActivity"
            android:label="@string/title_invite_member" >
        </activity>

    </application>

</manifest>
